<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:textColorPrimary">@color/colorFontMain</item>  
        <item name="android:fontFamily">@font/source_sans_pro</item>
    </style>

    <style name="statusBarStyle" parent="@style/AppTheme">
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorListBackground</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="tabTextStyle" parent="@style/AppTheme">
        <item name="android:singleLine">false</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorFontSecond</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
